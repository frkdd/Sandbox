<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <EditText
            android:id="@+id/editText"
            android:layout_width="356dp"
            android:layout_marginBottom="2dp"
            android:clickable="false"
            android:contextClickable="false"
            android:digits=".1234567890+-×÷() "
            android:ellipsize="end"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="end"
            android:inputType="numberSigned|number|numberDecimal"
            android:linksClickable="false"
            android:longClickable="false"
            android:scrollHorizontally="true"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView"
            app:layout_constraintVertical_bias="1.0"
            app:layout_row="4" />

        <EditText
            android:id="@+id/textView"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:linksClickable="false"
            android:longClickable="false"
            android:contextClickable="false"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#00FFFFFF"
            android:digits=".1234567890+-×÷() "
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="bottom|end"
            android:inputType="numberSigned|number|numberDecimal"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:textColor="#656565"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintVertical_bias="1.0"
            app:layout_row="3" />

        <EditText
            android:id="@+id/textView2"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:linksClickable="false"
            android:longClickable="false"
            android:contextClickable="false"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#00FFFFFF"
            android:digits=".1234567890+-×÷()"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="bottom|end"
            android:inputType="numberSigned|number|numberDecimal"
            android:singleLine="true"
            android:textColor="#656565"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_constraintBottom_toTopOf="@id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintVertical_bias="0.674"
            app:layout_row="2" />

        <EditText
            android:id="@+id/textView3"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:linksClickable="false"
            android:longClickable="false"
            android:contextClickable="false"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#00FFFFFF"
            android:digits=".1234567890+-×÷()"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="bottom|end"
            android:inputType="numberSigned|number|numberDecimal"
            android:singleLine="true"
            android:textColor="#656565"
            android:textSize="23sp"
            app:layout_column="0"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/gridLayout"
            app:layout_constraintVertical_bias="0.349"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="354dp"
        android:layout_height="395dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridLayout">

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="clearEverything"
            android:text="CE"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button7"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeSeven"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeEight"
            android:text="8"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="divide"
            android:text="÷"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="172dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hyphenationFrequency="full"
            android:onClick="clear"
            android:textSize="30sp"
            app:icon="@android:drawable/ic_input_delete"
            app:iconGravity="textStart"
            app:iconSize="45dp"
            app:iconTint="#000000"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button9"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeNine"
            android:text="9"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="multiply"
            android:text="×"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeFour"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button5"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeFive"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeSix"
            android:text="6"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDeduct"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="deduct"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeOne"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button2"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeTwo"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeThree"
            android:text="3"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSum"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="sum"
            android:text="+"
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="172dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeZero"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonDecimal"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="typeDecimal"
            android:text="."
            android:textColor="#000000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:onClick="result"
            android:text="="
            android:textColor="#000000"
            android:textSize="30sp" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>